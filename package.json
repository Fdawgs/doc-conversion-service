{
	"name": "doc-conversion-service",
	"version": "3.0.0",
	"description": "RESTful API web service for converting clinical documents/files",
	"main": "src/index.js",
	"repository": "git@github.com:Fdawgs/doc-conversion-service.git",
	"author": "Frazer Smith",
	"license": "MIT",
	"scripts": {
		"changelog": "conventional-changelog -p @commitlint/config-conventional -s -i CHANGELOG.md",
		"docs": "apidoc -i src/ -o docs/",
		"dupe-check": "yarn jsinspect ./src",
		"lint": "eslint src/**/*.js",
		"nodemon": "cross-env NODE_ENV=development nodemon src/index.js",
		"prettier": "prettier ** --write",
		"start": "node src/index.js",
		"test": "cross-env NODE_ENV=test yarn lint && yarn test-coverage",
		"test-coverage": "cross-env NODE_ENV=test jest --coverage --verbose",
		"test-only": "cross-env NODE_ENV=test jest --verbose"
	},
	"jest": {
		"clearMocks": true,
		"collectCoverageFrom": [
			"src/**/*.js"
		],
		"testEnvironment": "node"
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^8.3.4",
		"apidoc": "^0.20.0",
		"conventional-changelog-cli": "^2.0.31",
		"coveralls": "^3.0.9",
		"cross-env": "^7.0.2",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-import": "^2.20.1",
		"eslint-plugin-jest": "^23.8.2",
		"eslint-plugin-json": "^2.1.1",
		"jest": "^25.1.0",
		"jsinspect": "^0.12.7",
		"node-mocks-http": "^1.8.1",
		"nodemon": "^2.0.2",
		"prettier": "^1.19.1",
		"supertest": "^4.0.2",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"cssom": "^0.4.4",
		"express": "^4.17.1",
		"express-winston": "^4.0.3",
		"fix-utf8": "^1.1.1",
		"glob": "^7.1.6",
		"helmet": "^3.21.3",
		"htmltidy2": "^0.3.0",
		"jsdom": "^16.2.1",
		"multer": "^1.4.2",
		"node-poppler": "^1.5.1",
		"passport": "^0.4.1",
		"passport-http-bearer": "^1.0.1",
		"sanitize-middleware": "^2.0.1",
		"uuid": "^7.0.2",
		"winston": "^3.2.1",
		"winston-daily-rotate-file": "^4.4.2"
	},
	"apidoc": {
		"title": "Document Conversion API",
		"name": "Document Conversion API",
		"template": {
			"withCompare": false
		}
	}
}
