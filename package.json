{
	"name": "doc-conversion-service",
	"version": "4.2.2",
	"description": "RESTful API web service for converting clinical documents/files",
	"main": "src/index.js",
	"repository": "git@github.com:Fdawgs/doc-conversion-service.git",
	"author": "Frazer Smith",
	"license": "MIT",
	"engines": {
		"node": ">=12.16.3"
	},
	"scripts": {
		"changelog": "conventional-changelog -p @commitlint/config-conventional -s -i CHANGELOG.md && prettier CHANGELOG.md --write",
		"docs": "apidoc -i src/ -o docs/",
		"dupe-check": "yarn jsinspect ./src",
		"lint": "eslint . --cache --ext js,jsx,ts,tsx",
		"nodemon": "cross-env NODE_ENV=development nodemon src/index.js",
		"prettier": "prettier . --write",
		"start": "node src/index.js",
		"test": "cross-env NODE_ENV=test yarn lint && yarn test-only",
		"test-coverage": "cross-env NODE_ENV=test jest --coverage --runInBand",
		"test-only": "cross-env NODE_ENV=test jest --detectOpenHandles --runInBand"
	},
	"jest": {
		"clearMocks": true,
		"collectCoverageFrom": [
			"src/server/**/*.js"
		],
		"testEnvironment": "node",
		"testTimeout": 10000
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^9.0.1",
		"conventional-changelog-cli": "^2.0.34",
		"coveralls": "^3.1.0",
		"cross-env": "^7.0.2",
		"eslint": "^7.3.1",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jest": "^23.17.1",
		"eslint-plugin-jsdoc": "^28.5.1",
		"eslint-plugin-json": "^2.1.1",
		"eslint-plugin-promise": "^4.2.1",
		"faker": "^4.1.0",
		"is-html": "^2.0.0",
		"jest": "^26.1.0",
		"jsinspect": "^0.12.7",
		"lodash": "^4.17.15",
		"node-mocks-http": "^1.8.1",
		"nodemon": "^2.0.4",
		"prettier": "^2.0.5",
		"superagent": "^5.3.1",
		"typescript": "^3.9.5"
	},
	"dependencies": {
		"apidoc": "^0.23.0",
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"cssom": "^0.4.4",
		"custom-env": "^2.0.1",
		"express": "^4.17.1",
		"express-pino-logger": "^5.0.0",
		"file-stream-rotator": "^0.5.7",
		"fix-utf8": "^1.1.1",
		"glob": "^7.1.6",
		"helmet": "^3.23.3",
		"htmltidy2": "^0.3.0",
		"jsdom": "^16.2.2",
		"multer": "^1.4.2",
		"node-poppler": "^1.7.4",
		"passport": "^0.4.1",
		"passport-http-bearer": "^1.0.1",
		"sanitize-middleware": "^2.0.12",
		"uuid": "^8.2.0"
	},
	"apidoc": {
		"title": "Document Conversion API",
		"name": "Document Conversion API",
		"template": {
			"withCompare": false
		}
	}
}
