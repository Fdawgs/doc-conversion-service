{
	"name": "doc-conversion-service",
	"version": "6.3.0",
	"description": "RESTful API web service for converting clinical documents/files",
	"main": "src/index.js",
	"repository": "git@github.com:Fdawgs/doc-conversion-service.git",
	"author": "Frazer Smith",
	"license": "MIT",
	"engines": {
		"node": ">=10.22.0"
	},
	"scripts": {
		"changelog": "conventional-changelog -p @commitlint/config-conventional -s -i CHANGELOG.md && prettier CHANGELOG.md --write",
		"docs": "apidoc -i src/ -o docs/",
		"dupe-check": "yarn jsinspect ./src",
		"jest": "cross-env NODE_ENV=test LOGGER_ENABLED=false jest --detectOpenHandles --runInBand",
		"jest-coverage": "cross-env NODE_ENV=test LOGGER_ENABLED=false jest --coverage --runInBand",
		"lint": "eslint . --cache --ext js,jsx,ts,tsx --ignore-path .gitignore",
		"lint:prettier": "prettier . --write --ignore-path .gitignore",
		"lint:prettier:ci": "prettier . --check --ignore-path .gitignore",
		"start": "node src/server.js",
		"test": "cross-env NODE_ENV=test yarn lint && yarn jest"
	},
	"jest": {
		"clearMocks": true,
		"collectCoverageFrom": [
			"src/server/**/*.js"
		],
		"testEnvironment": "node",
		"testTimeout": 10000
	},
	"nodemonConfig": {
		"env": {
			"NODE_ENV": "development",
			"SUPPRESS_SUPPORT": 1
		},
		"ignore": [
			"src/server/temp",
			"test_files",
			"test_ssl_cert"
		],
		"verbose": true,
		"watch": [
			".env.development",
			"src"
		]
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^11.0.0",
		"conventional-changelog-cli": "^2.1.1",
		"coveralls": "^3.1.0",
		"cross-env": "^7.0.3",
		"eslint": "^7.16.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-config-prettier": "^7.1.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.1.3",
		"eslint-plugin-jsdoc": "^30.7.8",
		"eslint-plugin-json": "^2.1.2",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-security": "^1.4.0",
		"faker": "^5.1.0",
		"is-html": "^2.0.0",
		"jest": "^26.6.3",
		"jsinspect": "^0.12.7",
		"lodash": "^4.17.20",
		"node-mocks-http": "^1.9.0",
		"nodemon": "^2.0.6",
		"prettier": "^2.2.1",
		"superagent": "^6.1.0"
	},
	"dependencies": {
		"apidoc": "^0.25.0",
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"cssom": "^0.4.4",
		"custom-env": "^2.0.1",
		"express": "^4.17.1",
		"express-pino-logger": "^5.0.0",
		"file-stream-rotator": "^0.5.7",
		"file-type": "^16.0.1",
		"fix-utf8": "^1.1.1",
		"glob": "^7.1.6",
		"helmet": "^4.2.0",
		"hpp": "^0.2.3",
		"htmltidy2": "^0.3.0",
		"jsdom": "^16.4.0",
		"multer": "^1.4.2",
		"node-poppler": "^2.1.1",
		"node-unrtf": "^1.0.4",
		"passport": "^0.4.1",
		"passport-http-bearer": "^1.0.1",
		"pino": "^6.7.0",
		"sanitize-middleware": "^4.0.1",
		"tesseract.js": "^2.1.4",
		"uuid": "^8.3.1"
	},
	"apidoc": {
		"title": "Document Conversion API",
		"name": "Document Conversion API",
		"template": {
			"withCompare": false
		}
	}
}
